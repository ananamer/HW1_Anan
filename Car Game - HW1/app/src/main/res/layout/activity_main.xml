<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_horizontal_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/heart"

            />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_horizontal_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65">

        <LinearLayout
            android:id="@+id/left_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="top|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/stone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middle_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="top|center"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="top|center"
            android:orientation="horizontal">
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/carTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03">

        <LinearLayout
            android:id="@+id/left_car_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/middle_car_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/car"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:rotationX="180"
                android:src="@drawable/car"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_car_track"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>
    <!--********************************************************************-->

    <RelativeLayout
        android:id="@+id/bottom_horizontal_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.17">

        <ImageButton
            android:id="@+id/left_btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:background="@color/gray"
            android:src="@drawable/left_arrow" />

        <ImageButton
            android:id="@+id/right_btn"
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@color/gray"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

</LinearLayout>

